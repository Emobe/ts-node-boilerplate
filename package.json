{
  "name": "ts-node-boilerplate",
  "version": "2.0.0",
  "description": "Typescript boilerplate using ts-node and tape for testing",
  "main": "index.js",
  "scripts": {
    "start": "node dist/src/index.js",
    "dev": "nodemon",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "build": "pnpm run clean-build && tsc",
    "clean-build": "rm -rf dist"
  },
  "engines": {
    "node": ">=14 < 18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emobe/ts-boilerplate.git"
  },
  "keywords": [
    "typescript",
    "tape",
    "boilerplate",
    "testing"
  ],
  "author": "Anthony Shuker <anthony@emobe.uk>",
  "license": "UNLICENCED",
  "bugs": {
    "url": "https://github.com/emobe/ts-boilerplate/issues"
  },
  "homepage": "https://github.com/emobe/ts-boilerplate#readme",
  "devDependencies": {
    "@types/node": "^18.11.12",
    "@types/tape": "^4.13.2",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "@types/jest": "^29.2.4",
    "ts-jest": "^29.0.3"
  },
  "dependencies": {
    "tsconfig-paths": "^4.1.1"
  }
}
