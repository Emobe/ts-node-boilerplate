{
  "name": "ts-node-boilerplate",
  "version": "1.0.0",
  "description": "Typescript boilerplate using ts-node and tape for testing",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "ts-node node_modules/tape/bin/tape tests/**/*.test.ts",
    "test:watch": "ts-node node_modules/tape-watch/bin/tape-watch tests/**/*.test.ts",
    "build": "pnpm run clean-build && tsc",
    "clean-build": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emobe/ts-boilerplate.git"
  },
  "keywords": [
    "typescript",
    "tape",
    "boilerplate",
    "testing"
  ],
  "author": "Anthony Shuker <anthony@emobe.uk>",
  "license": "UNLICENCED",
  "bugs": {
    "url": "https://github.com/emobe/ts-boilerplate/issues"
  },
  "homepage": "https://github.com/emobe/ts-boilerplate#readme",
  "devDependencies": {
    "@types/node": "^18.11.12",
    "@types/tape": "^4.13.2",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "sinon": "^15.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "tsconfig-paths": "^4.1.1"
  }
}
