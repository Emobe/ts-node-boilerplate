{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./build/",
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
    
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"]
}

